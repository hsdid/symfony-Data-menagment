{% extends 'base.html.twig' %}

{% block title %}User!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">

        {% if msg is defined %} 
        <div class="alert alert-danger">

            {{msg}}

        </div> 
        {% endif %}      
    <h3>Users</h3>
   
        <div class="mt-4 ">
            {% if users %}
            <table class="table" id="products">
                <thead>
                        <tr>
                            <th scope="col">id</th>
                            <th scope="col">name</th>
                            {# <th scope="col">info</th>
                            <th scope="col"><a href="/product/sortByDate/ASC"> public time</a> </th> #}
                            <th scope="col"> <a href="/user/sortByProducts/ASC"> products</a></th>
                            <th scope="col"><a href="/user/sortByLikes/DESC"> likes</a></th>
                            
                        </tr>
                       
                </thead>
                <tbody>
                
                {% for user in users %}
                
                <tr>
                   
                    <td scope="row">{{ user.id }} </td>
                    <td>{{ user.username }} </td>
                   
                    {# <td>{{ product.getPublicDate|date("Y-m-d") }} </td> #}
                    <td>{{ user.products.count }} </td>
                    <td>{{ user.likes.count }} </td>
                   
                   
                </tr>

                {% endfor %}
                </tbody> 
            </table>
            {% endif %}
        </div>
    
    
    
</div>
{% endblock %}